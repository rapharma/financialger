app.controller('indexController', function($scope){

	$scope.addProduct = function(){

		var nome = document.getElementById("nomeproduto");
		var idade = document.getElementById("precoproduto");

		$scope.pessoas.push({ nome : nomeproduto.value, idade : precoproduto.value })
	
	  nomeproduto.value = "";
	  precoproduto.value = "";

	}

});
